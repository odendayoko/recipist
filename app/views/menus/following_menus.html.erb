<div class="body-container">
  <%= render 'layouts/pagelink'%>

  <div class="container">
    <div class="recipe-list">
      <% @menus.each do |menu| %>
        <div class="index-recipe">
          <div class="index-recipe-image">
            <%= link_to menu_path(menu.id) do %>
              <%= image_tag menu.image if menu.image.attached? %>
            <% end %>
          </div>
          <div class="index-recipe-name">
            <%= link_to "#{menu.name}" , menu_path(menu.id)%>
          </div>
          <div class= "favorite-recipe-user">
            <%= "by #{menu.user.nickname}" %>
          </div>
          <div class="index-recipe-link">
            <%= link_to menu.url, target: "_blank" do %>
              <i class="fa-solid fa-up-right-from-square"></i>  レシピを見る
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
