<h3 class="show-recipe-name"><%= @menu.name %>の詳細情報</h3>

<div class="show-recipe-image">
  <%= image_tag @menu.image if @menu.image.attached? %>
</div>

<div class = "show-hed">
  <div class = "show-back-botton" >
    <%= link_to '戻る', root_path, method: :get %>
  </div>

  <% if @menu.user.id == current_user.id %>
    <div class= "show-edit-botton">
      <%= link_to '編集', edit_menu_path(@menu.id), method: :get %>
    </div>
  <% end %>
</div>

<div class = "show-recipe-url">
 <%= link_to "レシピのURL： #{@menu.url}", @menu.url %>
</div>

<div class = "show-recipe-memo">
 <%= "メモ：　#{@menu.memo}" %>
</div>


<div id="like-btn<%= @menu.id %>">
    <% if user_signed_in? && @menu.favorited_by?(current_user)%>
      <%=link_to "いいね済", menu_favorite_path(@menu.id),  method: :delete, class: "menu_favorites" %>
    <% else %>
      <%=link_to "いいねする", menu_favorite_path(@menu.id), method: :post, class: "menu_favorites" %>
    <% end %>
  </div>
