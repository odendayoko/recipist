<div class = "show-hed">
  <div class = "show-back-botton" >
    <%= link_to '戻る', root_path, method: :get %>
  </div>

  <h3 class="show-recipe-name"><%= @menu.name %>の詳細情報</h3>

  <% if @menu.user.id == current_user.id %>
    <div class= "show-edit-botton">
      <%= link_to '編集', edit_menu_path(@menu.id), method: :get %>
    </div>
  <% end %>
</div>

<div class="show-recipe-image">
  <%= image_tag @menu.image if @menu.image.attached? %>
</div>




<%= link_to @menu.url %>
<%= @menu.memo %>

<%= link_to 'お気に入りに追加', "/menus/#{@menu.id}/favorite", method: :post %>
