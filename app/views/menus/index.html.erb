<div class="user_nav grid-6">
  <a class="post" href="/menus/new">レシピを追加する</a>
</div>


<div class="recipe-list">
  <% @menus.each do |menu| %>
    <div class="recipe">
      <div class="recipe-image">
        <%= link_to menu_path(menu.id) do %>
          <%= image_tag menu.image if menu.image.attached? %>
        <% end %>
      </div>
      <div class="recipe-name">
        <%= link_to "#{menu.name}" , menu_path(menu.id)%>
      </div>
      <div class="recipe-url">
        <%= link_to "レシピのURL: #{menu.url}", menu.url, target: "_blank"%>
      </div>
    </div>
  <% end %>
</div>
