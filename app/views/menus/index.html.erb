
<%# 
<div class="user_nav grid-6">
  <a class="post" href="/menus/new">レシピを追加する</a>
</div> %>
<div class="top-link">
  <div class="links">
  <%= link_to "投稿一覧", root_path,class: "link" %>
  <%= link_to "いいね一覧", "/users/#{current_user.id}/favorite_menus",class: "link"%>
  <%= link_to "フォローしているユーザーのレシピ一覧", "menus/following_menus",class: "link"%>
  </div>
</div>

<div class="recipe-list">
  <% @menus.each do |menu| %>
    <div class="index-recipe">
      <div class="index-recipe-image">
        <%= link_to menu_path(menu.id) do %>
          <%= image_tag menu.image if menu.image.attached? %>
        <% end %>
      </div>
      <div class="index-recipe-name">
        <%= link_to "#{menu.name}" , menu_path(menu.id)%>
      </div>
      <div class="index-recipe-url">
        <%= link_to "#{menu.url}", menu.url, target: "_blank"%>
      </div>
    </div>
  <% end %>
</div>
