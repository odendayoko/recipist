<!DOCTYPE html>
<html>
  <head>
    <title>Recipist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <link rel="stylesheet" href='https://use.fontawesome.com/releases/v6.4.0/css/all.css'>
    <%= display_meta_tags(default_meta_tags) %>
  </head>

  <body>
     <header class="header">
     <div class="header-top">
        <div class="header-bar">
          <h1 class="header-logo"><a href="/">Recipist</a></h1>
          <% if user_signed_in? %>
            <div class="hamburger">
              <span></span>
              <span></span>
              <span></span>
            </div>
            <div class="hamburger-menu">       
              <div class = "user-name">
                <%= current_user.nickname %>
              </div>
              <%= link_to "マイページ", "/users/#{current_user.id}/mypage",class: "post"%>
              <%= link_to "ユーザー検索", "/users/user_search",class: "post"%>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: "post"%>
            </div>
          <% else %>
            <div class ="header-menu">
              <%= link_to "ログイン", new_user_session_path, class: "header-login-button" %>
              <%# <%= link_to "新規登録", new_user_registration_path, class: "header-registration-button" %> 
            </div>
          <% end %>
        </div>
      </div>
      
    </header>
    <%= yield %>
    <footer>
      <div class="container">
      <div class="logout">
        <%= "Copyright Recipist 2023." %>
   
      </div>  
    </footer>
  </body>
</html>
