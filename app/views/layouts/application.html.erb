<!DOCTYPE html>
<html>
  <head>
    <title>Recipist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://use.fontawesome.com/releases/v6.4.0/css/all.css' %>
  </head>

  <body>
     <header class="header">
     <div class="header-top">
        <div class="header__bar">
          <h1 class="header-logo"><a href="/">Recipist</a></h1>
            <% if user_signed_in? %>
              <div class="user_nav grid-6">
                <%= current_user.nickname %>
                <%= link_to "マイページ", "/users/#{current_user.id}/mypage",class: "post"%>
                <%= link_to "ユーザー検索", "/users/user_search",class: "post"%>
                <%= link_to "投稿する", new_menu_path, class: "post" %>
              </div>
            <% else %>
              <div class="grid-6">
                <%= link_to "ログイン", new_user_session_path, class: "post" %>
                <%= link_to "新規登録", new_user_registration_path, class: "post" %>
              </div>
            <% end %>       
        </div>
      </div>
      <% if user_signed_in? %>
        <div class="search-top">
          <%= form_with(url: search_menus_path, local: true, method: :get, class: "search-form") do |form| %>
            <%= form.text_field :word, placeholder: "レシピ名", class: "search-input" %>
            <%= form.submit "検索", class: "search-button" %>
          <% end %>
        </div>
      <% end %>
    </header>
    <%= yield %>
    <footer>
      <p>
        Copyright Recipist 2023.
      </p>
      <% if user_signed_in? %>
        <div class="user_nav grid-6">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </div>
      <% end %>     
    </footer>
  </body>
</html>
