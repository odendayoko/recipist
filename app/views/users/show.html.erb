<div class="contents row">
  <p><%= @nickname %>のレシピ一覧</p>
  <% if current_user != @user %>
    <% if current_user.following?(@user) %>
      <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "unfollow-botton" %>
    <% else %>
    <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class:"follow_botton" %>
    <% end %>
  <% end %>
</div>

<div class="recipe-list">
  <% @menus.each do |menu| %>
    <div class="index-recipe">
      <div class="index-recipe-image">
        <%= link_to menu_path(menu.id) do %>
          <%= image_tag menu.image if menu.image.attached? %>
        <% end %>
      </div>
      <div class="index-recipe-name">
        <%= link_to "#{menu.name}" , menu_path(menu.id)%>
      </div>
      <div class="index-recipe-url">
        <%= link_to "レシピのURL: #{menu.url}", menu.url, target: "_blank"%>
      </div>
    </div>
  <% end %>
</div>